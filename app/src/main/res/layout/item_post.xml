<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/rvContainer"
    android:layout_margin="10dp">

<ImageView
    android:layout_width="40dp"
    android:id="@+id/ivProfpic"
    android:layout_height="40dp"/>
    <TextView
        android:id="@+id/tvUsername"
        android:layout_toEndOf="@id/ivProfpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="TextView" />
    <TextView
        android:id="@+id/tvCreatedAt"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        tools:text="TextView" />

    <ImageView
        android:id="@+id/ivCapture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/ivProfpic"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvPostDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvButtons"
        tools:text="TextView" />
    <LinearLayout
        android:id="@+id/lvButtons"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ivCapture"
        >
        <TextView
            android:id="@+id/numlikes"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="20dp"
            android:background="@drawable/heart"
            android:backgroundTint="@color/black"

            android:layout_height="20dp"
            android:id="@+id/ibHeart"
            android:layout_marginEnd="20dp"/>
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/ufi_comment"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="20dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ufi_new_direct"
            android:layout_height="20dp"/>
    </LinearLayout>
</RelativeLayout>