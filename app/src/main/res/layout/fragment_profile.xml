<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lvLogo"
            android:orientation="horizontal"
            android:layout_gravity="top">
            <ImageView
                android:layout_width="40dp"
                android:id="@+id/ivCamera"
                android:layout_height="40dp"
                android:src="@drawable/camera"
                />
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_toEndOf="@+id/ivCamera"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toStartOf="@+id/ivPlane"
                android:src="@drawable/nav_logo_whiteout"/>
            <ImageView
                android:layout_alignParentEnd="true"
                android:id="@+id/ivPlane"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/nav_inbox_paper_plane"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@id/lvLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/lvUser"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/ivProfilePicture"
                android:src="@drawable/ic_launcher_background"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="username"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:text="change profile picture"
                android:textAllCaps="false"
                android:id="@+id/btnChangePicture"
                android:layout_marginStart="200dp"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:background="@color/transparent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            android:padding="8dp"
            android:layout_below="@+id/lvUser"
            android:layout_above="@id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPosts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/btnLogout"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/green"
            android:text="@string/logged" />
    </RelativeLayout>
</FrameLayout>